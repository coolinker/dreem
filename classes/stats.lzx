    <class name="stats" width="80" height="48" scriptincludes="/lib/stats.min.js">
      <handler name="oninit">
        this.container = this.sprite.el;
        this.stats = new Stats();
        this.container.appendChild( this.stats.domElement );
      </handler>
      <handler name="onidle" reference="lz.idle">
        this.stats.update();
      </handler>
    </class>